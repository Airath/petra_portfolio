---
import "photoswipe/style.css";
import magnify from "../assets/magnify.svg";
import PhotoSwipeInit from "../components/PhotoSwipe.jsx";

const images = [
  {
    src: "https://cdn.photoswipe.com/photoswipe-demo-images/photos/1/img-2500.jpg",
    thumb:
      "https://cdn.photoswipe.com/photoswipe-demo-images/photos/1/img-200.jpg",
    width: 1875,
    height: 2500,
  },
  {
    src: "https://cdn.photoswipe.com/photoswipe-demo-images/photos/2/img-2500.jpg",
    thumb:
      "https://cdn.photoswipe.com/photoswipe-demo-images/photos/2/img-200.jpg",
    width: 1669,
    height: 2500,
  },
  {
    src: "https://cdn.photoswipe.com/photoswipe-demo-images/photos/3/img-2500.jpg",
    thumb:
      "https://cdn.photoswipe.com/photoswipe-demo-images/photos/3/img-200.jpg",
    width: 2500,
    height: 1666,
  },
];
---

<style>
  .img-container {
    position: relative;
    display: inline-block;
    margin: 6px;
    overflow: hidden;
    border-radius: 6px;
  }

  .img-container img {
    display: block;
    max-width: 100%;
    height: auto;
    transition: transform 0.3s ease;
    border-radius: 36px;
  }

  /* .img-container:hover img {
    transform: scale(1.05);
  } */

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #d4b0c8; /* greenyellow áttetsző */
    opacity: 0;
    transition: opacity 0.3s ease;
    border-radius: 36px;
  }

  .img-container:hover .overlay {
    opacity: 50%;
  }

  .magnify {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); /* valódi középre helyezés */
    opacity: 0;
  }

  .img-container:hover .magnify {
    opacity: 1;
    transition: opacity 0.3s ease;
  }
</style>

<div class="pswp-gallery gallery" id="my-gallery">
  {
    images.map((img) => (
      <a
        href={img.src}
        data-pswp-width={img.width}
        data-pswp-height={img.height}
        class="img-container"
      >
        <img src={img.thumb} alt="Galéria kép" class="thumb" />
        <div class="overlay" />
        <img src={magnify.src} alt="Nagyító ikon" class="magnify" width="40" />
      </a>
    ))
  }
</div>

<PhotoSwipeInit client:load />
